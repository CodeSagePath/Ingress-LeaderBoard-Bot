# Development Environment Configuration for Ingress Leaderboard Bot
# This file is used with docker-compose.dev.yml for local development

# =============================================================================
# REQUIRED: Add your values here
# =============================================================================

# Telegram Bot Configuration (REQUIRED)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Development Chat ID (optional but recommended for testing)
# TELEGRAM_ALLOWED_CHAT_IDS=your_development_chat_id

# =============================================================================
# Development Settings (pre-configured for local development)
# =============================================================================

# Development Mode Settings
DEBUG=true
PRODUCTION=false
LOG_LEVEL=DEBUG
BOT_DEBUG=true

# Development Database Settings (configured for docker-compose.dev.yml)
DB_HOST=db
DB_PORT=5432
DB_NAME=ingress_leaderboard_dev
DB_USER=postgres
DB_PASSWORD=dev_password
DB_ECHO=true  # Show SQL queries in development

# Database Connection Pool Settings (optimized for development)
DB_POOL_SIZE=3
DB_MAX_OVERFLOW=5
DB_CONNECTION_TIMEOUT=10
DB_POOL_RECYCLE=1800

# Development Performance Settings
LEADERBOARD_CACHE_TIMEOUT=60  # Shorter cache for testing
BOT_RATE_LIMIT_PER_MINUTE=30  # Relaxed rate limiting
BOT_RATE_LIMIT_PER_HOUR=300

# Development Telegram Settings
TELEGRAM_WEBHOOK_URL=  # Leave empty for polling mode in development
TELEGRAM_WEBHOOK_PORT=8443

# Telegram API Configuration (development timeouts)
TELEGRAM_REQUEST_TIMEOUT=15
TELEGRAM_CONNECTION_POOL_SIZE=4
TELEGRAM_READ_TIMEOUT=15
TELEGRAM_WRITE_TIMEOUT=15
TELEGRAM_CONNECT_TIMEOUT=5

# Development Logging Configuration
LOG_FILE=bot_dev.log
LOG_MAX_FILE_SIZE_MB=50
LOG_BACKUP_COUNT=3
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - [%(filename)s:%(lineno)d] - %(message)s

# Leaderboard Configuration (development settings)
LEADERBOARD_MAX_ENTRIES=50
LEADERBOARD_DEFAULT_LIMIT=10
LEADERBOARD_MIN_PROGRESS_DAYS=3
LEADERBOARD_MAX_PROGRESS_DAYS=30
LEADERBOARD_ENABLE_MONTHLY=true
LEADERBOARD_ENABLE_WEEKLY=true
LEADERBOARD_ENABLE_DAILY=true

# Application Configuration
PRODUCTION=false
DEBUG=true

# Environment Configuration
TZ=UTC
LC_ALL=en_US.UTF-8

# Full Development Database URL (alternative to individual settings)
DATABASE_URL=postgresql://postgres:dev_password@db:5432/ingress_leaderboard_dev

# =============================================================================
# Development Notes:
# 1. Copy this file to .env and add your actual bot token
# 2. Use: docker-compose -f docker-compose.dev.yml up
# 3. Adminer (database admin) available at: http://localhost:8080
# 4. Bot logs will show SQL queries and detailed debug information
# 5. Database is persistent across container restarts
# =============================================================================