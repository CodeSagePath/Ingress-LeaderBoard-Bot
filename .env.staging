# Ingress Prime Leaderboard Bot - Staging Environment Configuration
# This configuration is optimized for staging/testing deployments

# Environment
ENVIRONMENT=staging
PRODUCTION=false
DEBUG=true

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=${STAGING_TELEGRAM_BOT_TOKEN}
BOT_DEBUG=true
TELEGRAM_WEBHOOK_URL=
TELEGRAM_WEBHOOK_PORT=8443
TELEGRAM_ALLOWED_CHAT_IDS=${STAGING_ALLOWED_CHAT_IDS}
BOT_RATE_LIMIT_PER_MINUTE=10
BOT_RATE_LIMIT_PER_HOUR=120

# Database Configuration
DB_HOST=${STAGING_DB_HOST}
DB_PORT=5432
DB_NAME=ingress_leaderboard_staging
DB_USER=${STAGING_DB_USER}
DB_PASSWORD=${STAGING_DB_PASSWORD}
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_CONNECTION_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Alternative: Full Database URL (overrides individual settings)
# DATABASE_URL=${STAGING_DATABASE_URL}

# Leaderboard Configuration
LEADERBOARD_CACHE_TIMEOUT=300
LEADERBOARD_MAX_ENTRIES=100
LEADERBOARD_DEFAULT_LIMIT=20
LEADERBOARD_MIN_PROGRESS_DAYS=7
LEADERBOARD_MAX_PROGRESS_DAYS=90
LEADERBOARD_ENABLE_MONTHLY=true
LEADERBOARD_ENABLE_WEEKLY=true
LEADERBOARD_ENABLE_DAILY=true

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=bot_staging.log
LOG_MAX_FILE_SIZE_MB=50
LOG_BACKUP_COUNT=10
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - [%(filename)s:%(lineno)d] - %(message)s

# Telegram API Configuration
TELEGRAM_API_URL=https://api.telegram.org
TELEGRAM_REQUEST_TIMEOUT=30
TELEGRAM_CONNECTION_POOL_SIZE=8
TELEGRAM_READ_TIMEOUT=30
TELEGRAM_WRITE_TIMEOUT=30
TELEGRAM_CONNECT_TIMEOUT=10

# Monitoring Configuration
MONITORING_ENABLED=true
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
METRICS_PORT=9090

# Security Configuration
CORS_ENABLED=false
SSL_VERIFY=true
SECRET_KEY=${STAGING_SECRET_KEY}

# Performance Configuration
CACHE_ENABLED=true
CACHE_TTL=300
MAX_WORKERS=4
WORKER_TIMEOUT=120

# Environment Configuration
TZ=UTC
LC_ALL=en_US.UTF-8