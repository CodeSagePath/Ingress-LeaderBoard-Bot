# Ingress Prime Leaderboard Bot Configuration
# Copy this file to .env and fill in your values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
BOT_DEBUG=false
TELEGRAM_WEBHOOK_URL=
TELEGRAM_WEBHOOK_PORT=8443
TELEGRAM_ALLOWED_CHAT_IDS=
BOT_RATE_LIMIT_PER_MINUTE=5
BOT_RATE_LIMIT_PER_HOUR=60

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ingress_leaderboard
DB_USER=postgres
DB_PASSWORD=your_database_password_here
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_CONNECTION_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Alternative: Full Database URL (overrides individual settings)
# DATABASE_URL=postgresql://user:password@host:port/database

# Leaderboard Configuration
LEADERBOARD_CACHE_TIMEOUT=300
LEADERBOARD_MAX_ENTRIES=100
LEADERBOARD_DEFAULT_LIMIT=20
LEADERBOARD_MIN_PROGRESS_DAYS=7
LEADERBOARD_MAX_PROGRESS_DAYS=90
LEADERBOARD_ENABLE_MONTHLY=true
LEADERBOARD_ENABLE_WEEKLY=true
LEADERBOARD_ENABLE_DAILY=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=bot.log
LOG_MAX_FILE_SIZE_MB=10
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Telegram API Configuration
TELEGRAM_API_URL=https://api.telegram.org
TELEGRAM_REQUEST_TIMEOUT=30
TELEGRAM_CONNECTION_POOL_SIZE=8
TELEGRAM_READ_TIMEOUT=30
TELEGRAM_WRITE_TIMEOUT=30
TELEGRAM_CONNECT_TIMEOUT=10

# Application Configuration
PRODUCTION=false
DEBUG=false

# Environment Configuration
TZ=UTC
LC_ALL=en_US.UTF-8

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Uncomment and use these settings for local development with Docker Compose
# These are optimized for the docker-compose.dev.yml setup

# Development Mode Settings (uncomment for local development)
# DEBUG=true
# PRODUCTION=false
# LOG_LEVEL=DEBUG
# BOT_DEBUG=true

# Development Database Settings (for docker-compose.dev.yml)
# DB_HOST=db
# DB_PORT=5432
# DB_NAME=ingress_leaderboard_dev
# DB_USER=postgres
# DB_PASSWORD=dev_password
# DB_ECHO=true  # Show SQL queries in development

# Development Performance Settings
# LEADERBOARD_CACHE_TIMEOUT=60  # Shorter cache for testing
# BOT_RATE_LIMIT_PER_MINUTE=30  # Relaxed rate limiting
# BOT_RATE_LIMIT_PER_HOUR=300

# Development Telegram Settings
# TELEGRAM_ALLOWED_CHAT_IDS=your_development_chat_id
# TELEGRAM_WEBHOOK_URL=  # Leave empty for polling mode in development

# Full Development Database URL (alternative to individual settings)
# DATABASE_URL=postgresql://postgres:dev_password@db:5432/ingress_leaderboard_dev

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Use these settings for production deployment

# Production Mode Settings
DEBUG=false
PRODUCTION=true
LOG_LEVEL=INFO
BOT_DEBUG=false

# Production Database Settings (update with your production values)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ingress_leaderboard
DB_USER=postgres
DB_PASSWORD=your_database_password_here
DB_ECHO=false

# Production Performance Settings
LEADERBOARD_CACHE_TIMEOUT=300
BOT_RATE_LIMIT_PER_MINUTE=5
BOT_RATE_LIMIT_PER_HOUR=60