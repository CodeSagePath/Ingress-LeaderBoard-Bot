# Ingress Prime Leaderboard Bot - Production Environment Configuration
# This configuration is optimized for production deployments

# Environment
ENVIRONMENT=production
PRODUCTION=true
DEBUG=false

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=${PROD_TELEGRAM_BOT_TOKEN}
BOT_DEBUG=false
TELEGRAM_WEBHOOK_URL=${PROD_TELEGRAM_WEBHOOK_URL}
TELEGRAM_WEBHOOK_PORT=8443
TELEGRAM_ALLOWED_CHAT_IDS=${PROD_ALLOWED_CHAT_IDS}
BOT_RATE_LIMIT_PER_MINUTE=5
BOT_RATE_LIMIT_PER_HOUR=60

# Database Configuration
DB_HOST=${PROD_DB_HOST}
DB_PORT=5432
DB_NAME=ingress_leaderboard_prod
DB_USER=${PROD_DB_USER}
DB_PASSWORD=${PROD_DB_PASSWORD}
DB_ECHO=false
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_CONNECTION_TIMEOUT=60
DB_POOL_RECYCLE=7200

# Alternative: Full Database URL (overrides individual settings)
# DATABASE_URL=${PROD_DATABASE_URL}

# Leaderboard Configuration
LEADERBOARD_CACHE_TIMEOUT=600
LEADERBOARD_MAX_ENTRIES=200
LEADERBOARD_DEFAULT_LIMIT=50
LEADERBOARD_MIN_PROGRESS_DAYS=7
LEADERBOARD_MAX_PROGRESS_DAYS=90
LEADERBOARD_ENABLE_MONTHLY=true
LEADERBOARD_ENABLE_WEEKLY=true
LEADERBOARD_ENABLE_DAILY=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=bot_production.log
LOG_MAX_FILE_SIZE_MB=100
LOG_BACKUP_COUNT=30
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - [%(filename)s:%(lineno)d] - %(message)s

# Telegram API Configuration
TELEGRAM_API_URL=https://api.telegram.org
TELEGRAM_REQUEST_TIMEOUT=60
TELEGRAM_CONNECTION_POOL_SIZE=16
TELEGRAM_READ_TIMEOUT=60
TELEGRAM_WRITE_TIMEOUT=60
TELEGRAM_CONNECT_TIMEOUT=30

# Monitoring Configuration
MONITORING_ENABLED=true
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
METRICS_PORT=9090

# Security Configuration
CORS_ENABLED=false
SSL_VERIFY=true
SECRET_KEY=${PROD_SECRET_KEY}
ENCRYPTION_KEY=${PROD_ENCRYPTION_KEY}

# Performance Configuration
CACHE_ENABLED=true
CACHE_TTL=600
MAX_WORKERS=8
WORKER_TIMEOUT=300

# SSL/TLS Configuration
SSL_CERT_PATH=${SSL_CERT_PATH}
SSL_KEY_PATH=${SSL_KEY_PATH}
SSL_CA_PATH=${SSL_CA_PATH}

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=${BACKUP_S3_BUCKET}
BACKUP_S3_REGION=${BACKUP_S3_REGION}

# Alert Configuration
ALERT_ENABLED=true
ALERT_WEBHOOK_URL=${ALERT_WEBHOOK_URL}
ALERT_EMAIL_ENABLED=${ALERT_EMAIL_ENABLED}
ALERT_EMAIL_SMTP_HOST=${ALERT_EMAIL_SMTP_HOST}
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=${ALERT_EMAIL_USERNAME}
ALERT_EMAIL_PASSWORD=${ALERT_EMAIL_PASSWORD}
ALERT_EMAIL_TO=${ALERT_EMAIL_TO}

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_FAILURE_THRESHOLD=3

# Environment Configuration
TZ=UTC
LC_ALL=en_US.UTF-8